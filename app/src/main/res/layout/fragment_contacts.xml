<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/contacts_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/if_you_have_questions"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        android:textSize="25sp"

        android:gravity="start"

        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/contacts_email_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/email_title"
        android:textColor="@color/primary_text"
        android:textSize="21sp"
        android:fontFamily="@font/roboto"

        android:gravity="start"

        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contacts_questions"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/contacts_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/email"
        android:textColor="@color/ripple_fragments_text"
        android:textSize="21sp"
        android:fontFamily="@font/roboto"

        android:clickable="true"
        android:focusable="true"

        android:gravity="start"

        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contacts_email_title"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>